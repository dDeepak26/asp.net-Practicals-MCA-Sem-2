@model Student
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YourAppName</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .text-center {
            text-align: center;
            padding: 20px;
        }

        h1.display-4 {
            color: #333;
            font-size: 2.5em;
            margin-bottom: 20px;
        }

        p {
            color: #666;
            font-size: 1.2em;
            margin-bottom: 10px;
        }

        .student-details {
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            max-width: 600px;
            margin: 50px auto;
        }
    </style>
</head>
<body>
    <div class="text-center">
        <h1 class="display-4">Student Details</h1>

        <div class="student-details">
            <p>Student ID: @Model.Id</p>
            <p>Student Name: @Model.Name</p>
            <p>Student City: @Model.City</p>
        </div>
    </div>
</body>
</html>
